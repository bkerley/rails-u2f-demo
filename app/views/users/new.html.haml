= form_for :user, url: users_path do |f|
  .name
    = f.label :username
    = f.text_field :username
  .password
    = f.label :password
    = f.password_field :password
  .password_confirmation
    = f.label :password_confirmation
    = f.password_field :password_confirmation
  .commit
    = f.submit 'Sign up'
